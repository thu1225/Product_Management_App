<%= form_for @product do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :sku %>
    <%= form.text_field :sku %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.select :category_id, Category.all.map {|c| [c.category,c.id]} %>
  </div>

  <div class = "field">
    <%= form.fields_for :product_properties do |f| %>
    <%= render 'product_property_fields', f: f %>
    <% end %>

  <%= link_to_add_fields "Add Property", form, :product_properties %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  
<% end %>